          // Collect the nav links
          .collapse.navbar-collapse.navbar-responsive-collapse
            ul.nav.navbar-nav
              li(class=(path === "home")?"active":"")
                a(href='/home')
                  | トップ
              li(class=(path === "about-us")?"active":"")
                a(href='/about-us')
                  | 会社概要
              li(class=(path === "services")?"active":"")
                a(href='/services')
                  | 事業内容
              li(class=(path === "recruitment")?"active":"")
                a(href='/recruitment')
                  | 採用情報
              li(class=(path === "contact")?"active":"")
                a(href='/contact')
                  | お問合せ

